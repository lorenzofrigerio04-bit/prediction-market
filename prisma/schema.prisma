// Schema Prisma per Prediction Market (PostgreSQL)
// Database: PostgreSQL - usare DATABASE_URL con connection string valida

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Utente: auth, crediti, streak, relazioni con eventi/previsioni/notifiche/badge/follow
model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  name          String?
  emailVerified DateTime? @map("email_verified")
  image         String?
  password      String?   // Hash bcrypt per login con email/password
  role          String?   @default("USER") // USER, ADMIN, BOT
  streakCount   Int       @default(0) @map("streak_count")
  credits       Int       @default(100)
  creditsMicros BigInt   @default(0) @map("credits_micros") // AMM trading balance (1 credit = 1_000_000)
  totalEarned   Int       @default(0) @map("total_earned") // Totale crediti guadagnati
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relazione con Notification
  notifications Notification[]

  // Relazioni con Event, Comment, Reaction
  events      Event[]       @relation("EventCreator")
  comments    Comment[]
  reactions   Reaction[]
  Prediction  Prediction[]
  Transaction Transaction[]
  userBadges  UserBadge[]
  eventFollows EventFollower[]
  userMissions UserMission[]
  accounts    Account[]
  Position    Position[]
  Trade       Trade[]

  @@map("users")
}

// Account OAuth per NextAuth (Google, etc.)
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Notification {
  id        String    @id @default(cuid())
  userId    String
  type      String // EVENT_CLOSING_SOON | EVENT_RESOLVED | RANK_UP | STREAK_RISK
  data      String? // Dati aggiuntivi in formato JSON (es: { eventId, eventTitle, oldRank, newRank, etc })
  message   String? // Campo legacy - i messaggi sono generati da type+data
  readAt    DateTime?
  createdAt DateTime  @default(now())

  // Relazione con User
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, readAt])
  @@index([createdAt])
  @@map("notifications")
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String? // Null se azione di sistema
  action     String // Es: EVENT_CREATE, EVENT_RESOLVE, COMMENT_HIDE, etc.
  entityType String // Es: "event", "comment", "user", etc.
  entityId   String? // ID dell'entità su cui è stata eseguita l'azione
  payload    String? // Dati aggiuntivi in formato JSON
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([action])
  @@map("audit_logs")
}

model EventSubmission {
  id               String    @id @default(cuid())
  title            String
  description      String?
  category         String
  closesAt         DateTime
  resolutionSource String?
  submittedById    String
  status           String    @default("PENDING") // PENDING, APPROVED, REJECTED
  reviewedAt       DateTime?
  reviewedById     String?
  reviewNotes      String?
  eventId          String?   // ID dell'evento creato se approvato
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([submittedById])
  @@index([status])
  @@index([createdAt])
  @@map("event_submissions")
}

model Event {
  id                    String    @id @default(cuid())
  title                 String
  description           String?
  category              String
  closesAt              DateTime
  resolutionSourceUrl   String?
  resolutionNotes       String?
  createdById           String
  resolutionStatus      String    @default("PENDING") // PENDING, NEEDS_REVIEW, RESOLVED
  b                     Float // Parameter for LMSR pricing
  resolutionBufferHours Int       @default(24)
  resolved              Boolean   @default(false)
  resolvedAt            DateTime? // Data di risoluzione
  outcome               String? // YES o NO - risultato quando risolto
  resolutionDisputedAt  DateTime? // Data di disputa della risoluzione
  resolutionDisputedBy  String? // ID utente che ha disputato
  // Campi legacy/computed per compatibilità (calcolati dalle predictions o da LMSR)
  probability           Float?
  yesCredits            Int?
  noCredits             Int?
  totalCredits          Int?
  yesPredictions        Int?
  noPredictions         Int?
  q_yes                 Float?
  q_no                  Float?
  p_init                Float?
  realWorldEventTime    DateTime?
  resolutionTimeExpected DateTime?
  // Campi per BLOCCO 5 (Event Publishing)
  status                String    @default("OPEN") // OPEN, CLOSED, RESOLVED
  dedupKey              String    @unique // Chiave deterministica per deduplicazione (obbligatorio)
  resolutionAuthorityHost String? // Host della fonte di risoluzione (es. "www.governo.it")
  resolutionAuthorityType String? // OFFICIAL | REPUTABLE
  resolutionCriteriaYes  String?  // Criterio formale per risoluzione YES
  resolutionCriteriaNo   String?  // Criterio formale per risoluzione NO
  sourceStorylineId      String?  // ID della storyline sorgente (da BLOCCO 3)
  templateId             String?   // ID del template usato per generazione
  tradingMode            String    @default("AMM") @map("trading_mode") // Solo AMM (Polymarket-style)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @default(now()) @updatedAt

  // Relazioni
  createdBy  User         @relation("EventCreator", fields: [createdById], references: [id])
  comments   Comment[]
  Prediction Prediction[]
  followers  EventFollower[]
  probabilitySnapshots EventProbabilitySnapshot[]
  ammState   AmmState?
  Position   Position[]
  Trade      Trade[]

  @@index([createdById])
  @@index([closesAt])
  @@index([resolved])
  @@index([category])
  @@index([status])
  @@index([dedupKey])
  @@index([sourceStorylineId])
  @@index([tradingMode])
  @@map("events")
}

model EventProbabilitySnapshot {
  id        String   @id @default(cuid())
  eventId   String   @map("event_id")
  yesPct    Float    @map("yes_pct") // 0–100
  createdAt DateTime @default(now()) @map("created_at")

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId, createdAt])
  @@map("event_probability_snapshots")
}

model Comment {
  id        String   @id @default(cuid())
  eventId   String
  userId    String
  parentId  String? // Per risposte/thread
  content   String
  hidden    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relazioni
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  event     Event      @relation(fields: [eventId], references: [id], onDelete: Cascade)
  parent    Comment?   @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[]  @relation("CommentReplies")
  reactions Reaction[]

  @@index([eventId])
  @@index([userId])
  @@index([parentId])
  @@index([hidden])
  @@index([createdAt])
  @@map("comments")
}

model Reaction {
  id        String   @id @default(cuid())
  commentId String
  userId    String
  type      String // thumbs_up, fire, heart, etc.
  createdAt DateTime @default(now())

  // Relazioni
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([commentId, userId, type]) // Un utente può avere solo una reazione di ogni tipo per commento
  @@index([commentId])
  @@index([userId])
  @@map("comment_reactions")
}

// Previsione: un utente per evento, amount e credits devono restare uguali (sempre impostare entrambi in create/update)
model Prediction {
  id        String   @id @default(cuid())
  eventId   String
  userId    String
  outcome   String // YES o NO
  amount    Int    @default(0) // Crediti scommessi (sempre uguale a credits) - default temporaneo per migration
  credits   Int // Alias per amount: mantenere uguale a amount per compatibilità lettura
  won       Boolean? // true se ha vinto, false se ha perso, null se non ancora risolto
  payout    Int? // Crediti vinti (se ha vinto)
  resolved  Boolean  @default(false) // Se l'evento è stato risolto
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  // Relazioni
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId]) // Un utente può fare una sola previsione per evento
  @@index([eventId])
  @@index([userId])
  @@index([resolved])
  @@index([createdAt])
  @@map("predictions")
}

// AMM state per market (1:1 with Event when tradingMode=AMM)
model AmmState {
  id          String   @id @default(cuid())
  eventId     String   @unique @map("event_id")
  qYesMicros  BigInt   @map("q_yes_micros")
  qNoMicros   BigInt   @map("q_no_micros")
  bMicros     BigInt   @map("b_micros")
  version     Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@map("amm_state")
}

// User position in an AMM market (share balances)
model Position {
  id              String   @id @default(cuid())
  eventId         String   @map("event_id")
  userId          String   @map("user_id")
  yesShareMicros  BigInt   @default(0) @map("yes_share_micros")
  noShareMicros   BigInt   @default(0) @map("no_share_micros")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
  @@map("positions")
}

// Immutable AMM trade record (buy/sell)
model Trade {
  id                String   @id @default(cuid())
  eventId           String   @map("event_id")
  userId            String   @map("user_id")
  side              String   // BUY | SELL
  outcome           String   // YES | NO
  shareMicros       BigInt   @map("share_micros")
  costMicros        BigInt   @map("cost_micros") // negative = cost paid, positive = proceeds
  realizedPlMicros  BigInt?  @map("realized_pl_micros") // solo per SELL: P&L realizzato (proceeds - cost basis)
  idempotencyKey    String   @map("idempotency_key")
  createdAt         DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, idempotencyKey])
  @@index([eventId])
  @@index([userId])
  @@index([createdAt])
  @@map("trades")
}

model Transaction {
  id            String   @id @default(cuid())
  userId        String
  type          String // PREDICTION_WIN, PREDICTION_LOSS, DAILY_BONUS, SHARE_BUY, SHARE_SELL, SHARE_PAYOUT, etc.
  amount        Int // Legacy: signed credits (positive = credit, negative = debit)
  amountMicros  BigInt?  @map("amount_micros") // AMM: signed micros (1 credit = 1_000_000)
  referenceId   String?
  referenceType String?  @map("reference_type") // "trade" | "event" | etc.
  createdAt     DateTime @default(now())

  // Relazioni
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([createdAt])
  @@map("transactions")
}

model Badge {
  id          String     @id @default(cuid())
  name        String
  description String
  icon        String
  rarity      String // COMMON, RARE, EPIC, LEGENDARY
  criteria    String? // JSON string con criteri per sbloccare il badge
  createdAt   DateTime  @default(now())

  // Relazioni
  userBadges UserBadge[]

  @@index([rarity])
  @@map("badges")
}

model UserBadge {
  id         String   @id @default(cuid())
  userId     String
  badgeId    String
  unlockedAt DateTime @default(now())

  // Relazioni
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([badgeId])
  @@map("user_badges")
}

model VerificationToken {
  token      String   @id
  identifier String // Email address
  expires    DateTime

  @@index([identifier])
  @@index([expires])
  @@map("verification_tokens")
}

model EventFollower {
  id      String   @id @default(cuid())
  userId  String
  eventId String
  createdAt DateTime @default(now())

  // Relazioni
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@index([userId])
  @@index([eventId])
  @@index([createdAt])
  @@map("event_followers")
}

// Template missioni (daily/weekly): target, reward, tipo
model Mission {
  id          String   @id @default(cuid())
  name        String
  description String
  type        String   // MAKE_PREDICTIONS, WIN_PREDICTIONS, DAILY_LOGIN, FOLLOW_EVENTS
  target      Int      // obiettivo (es. 3 previsioni)
  reward      Int      // crediti ricompensa
  period      String   // DAILY | WEEKLY
  category    String?  // categoria opzionale per filtrare (es. Tech)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())

  userMissions UserMission[]

  @@index([period])
  @@index([active])
  @@map("missions")
}

// Progresso utente per una missione in un periodo (un record per user+mission+periodStart)
model UserMission {
  id         String    @id @default(cuid())
  userId     String
  missionId  String
  periodStart DateTime // inizio giorno o settimana
  progress   Int      @default(0)
  completed  Boolean  @default(false)
  completedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  mission Mission @relation(fields: [missionId], references: [id], onDelete: Cascade)

  @@unique([userId, missionId, periodStart])
  @@index([userId])
  @@index([missionId])
  @@index([periodStart])
  @@map("user_missions")
}

// Prodotti negozio (solo crediti virtuali)
model ShopItem {
  id            String   @id @default(cuid())
  name          String
  type          String   @default("CREDIT_BUNDLE") // CREDIT_BUNDLE, COSMETIC, TICKET - default temporaneo per migration
  priceCredits  Int
  description   String?
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([active])
  @@map("shop_items")
}

// Stagioni/tornei (per leaderboard o eventi futuri)
model Season {
  id        String    @id @default(cuid())
  name      String
  startAt   DateTime
  endAt     DateTime
  createdAt DateTime  @default(now())

  @@index([startAt])
  @@index([endAt])
  @@map("seasons")
}

// Ingestion models per Source Mesh Deterministico
model SourceArticle {
  id            String   @id @default(cuid())
  canonicalUrl  String   @unique
  sourceType    String   // NEWSAPI | RSS_MEDIA | RSS_OFFICIAL | CALENDAR_SPORT | CALENDAR_EARNINGS
  sourceId      String?  // ID specifico della fonte (feed URL, calendar name, etc.)
  title         String
  content       String?  // Testo estratto (opzionale, solo per clustering)
  publishedAt   DateTime?
  fetchedAt     DateTime @default(now())
  rawData       String   // JSON con dati originali
  clusterId     String?  // ID del cluster Jaccard
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  cluster       SourceCluster? @relation(fields: [clusterId], references: [id])
  
  @@index([sourceType])
  @@index([canonicalUrl])
  @@index([clusterId])
  @@index([fetchedAt])
  @@map("source_articles")
}

model SourceCluster {
  id            String   @id @default(cuid())
  jaccardScore  Float    // Score medio del cluster
  articleCount  Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  articles      SourceArticle[]
  
  @@index([jaccardScore])
  @@map("source_clusters")
}

model IngestionLog {
  id              String   @id @default(cuid())
  sourceType      String
  articlesFetched Int      @default(0)
  articlesNew     Int      @default(0)
  articlesDeduped Int      @default(0)
  clustersCreated Int      @default(0)
  durationMs      Int
  success         Boolean
  errorMessage    String?
  createdAt       DateTime @default(now())
  
  @@index([sourceType])
  @@index([createdAt])
  @@map("ingestion_logs")
}
